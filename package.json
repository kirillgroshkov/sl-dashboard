{
  "name": "sl-dashboard",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "precommit": "lint-staged",
    "build": "stencil build --prerender",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "clean-www": "rm -rf ./www",
    "tslint-all": "tslint './src/**/*.{ts,tsx}' -e './src/components.d.ts' -t stylish --fix",
    "prettier-do": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,graphql,json}' '*.{md,js}'",
    "prettier-all": "yarn prettier-do && yarn tslint-all"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint -e './src/components.d.ts' -t stylish --fix",
      "git add"
    ],
    "**/*.{css,scss,graphql,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@stencil/core": "0.0.8-9",
    "@stencil/router": "latest",
    "bootstrap": "4.0.0-beta.2",
    "chart.js": "^2.7.1",
    "jquery": "^3.2.1",
    "luxon": "^0.3.1",
    "popper.js": "1.12.9"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/bluebird": "^3.5.18",
    "@types/chart.js": "^2.7.3",
    "@types/fs-extra": "^4.0.5",
    "@types/luxon": "^0.2.2",
    "bluebird": "^3.5.1",
    "dotenv": "^4.0.0",
    "fs-extra": "^4.0.2",
    "kg-dev": "^1.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.0"
  },
  "author": "Kirill Groshkov <1@inventix.ru>",
  "license": "MIT"
}
